{
  "name": "grafana-alloy-toolkit",
  "displayName": "Grafana Alloy Toolkit",
  "description": "VSCode extension for Grafana Alloy configuration files with syntax highlighting, validation, formatting, and snippets",
  "version": "0.1.1",
  "publisher": "grafana-alloy-toolkit",
  "license": "MIT",
  "icon": "icons/alloy-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/chaluvadis/grafana-alloy-toolkit"
  },
  "bugs": {
    "url": "https://github.com/chaluvadis/grafana-alloy-toolkit/issues"
  },
  "homepage": "https://github.com/chaluvadis/grafana-alloy-toolkit#readme",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets",
    "Linters"
  ],
  "keywords": [
    "grafana",
    "alloy",
    "observability",
    "telemetry",
    "configuration",
    "prometheus",
    "loki",
    "opentelemetry",
    "otel"
  ],
  "activationEvents": [
    "onLanguage:alloy"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "alloy",
        "aliases": [
          "Alloy",
          "alloy"
        ],
        "extensions": [
          ".alloy"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/alloy-icon.png",
          "dark": "./icons/alloy-icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "alloy",
        "scopeName": "source.alloy",
        "path": "./syntaxes/alloy.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "alloy",
        "path": "./snippets/alloy.json"
      }
    ],
    "iconThemes": [
      {
        "id": "alloy-file-icons",
        "label": "Alloy File Icons",
        "path": "./fileicons/alloy-icon-theme.json"
      }
    ],
    "commands": [
      {
        "command": "alloy.generateDocumentation",
        "title": "Generate Documentation",
        "category": "Alloy"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == alloy",
          "command": "alloy.generateDocumentation",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "alloy.generateDocumentation",
          "when": "resourceLangId == alloy"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
	"package": "npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
	"@vscode/vsce": "^3.7.1"
  }
}
