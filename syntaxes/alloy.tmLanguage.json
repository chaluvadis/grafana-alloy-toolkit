{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Alloy",
  "scopeName": "source.alloy",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#blocks"
    },
    {
      "include": "#attributes"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#constants"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.alloy",
          "match": "//.*$"
        },
        {
          "name": "comment.block.alloy",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.alloy",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.alloy",
              "match": "\\\\([\"\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        },
        {
          "name": "string.quoted.single.alloy",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.alloy",
              "match": "\\\\(['\\\\/bfnrt]|u[0-9a-fA-F]{4})"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.alloy",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.alloy",
          "match": "\\b[0-9]+([eE][+-]?[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.hex.alloy",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.alloy",
          "match": "\\b(if|else|for|in)\\b"
        },
        {
          "name": "storage.type.alloy",
          "match": "\\b(import|export)\\b"
        }
      ]
    },
    "blocks": {
      "patterns": [
        {
          "name": "entity.name.type.block.alloy",
          "match": "\\b(prometheus\\.scrape|prometheus\\.remote_write|prometheus\\.exporter\\.[a-z_]+|loki\\.write|loki\\.source\\.[a-z_]+|loki\\.process|otelcol\\.receiver\\.[a-z_]+|otelcol\\.processor\\.[a-z_]+|otelcol\\.exporter\\.[a-z_]+|discovery\\.[a-z_]+|local\\.file|logging|tracing)\\b"
        },
        {
          "name": "entity.name.tag.alloy",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\.[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "variable.other.property.alloy",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*=)"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.alloy",
          "match": "\\b(sys\\.env|concat|join|split|replace|format|json_decode|yaml_decode|env|file)\\b"
        },
        {
          "name": "support.function.alloy",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.alloy",
          "match": "="
        },
        {
          "name": "keyword.operator.comparison.alloy",
          "match": "(==|!=|<|>|<=|>=)"
        },
        {
          "name": "keyword.operator.logical.alloy",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.alloy",
          "match": "(\\+|-|\\*|/|%)"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.alloy",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.alloy",
          "match": "\\bnull\\b"
        }
      ]
    }
  }
}
